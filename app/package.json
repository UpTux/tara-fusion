{
  "name": "tara-fusion-electron",
  "version": "1.0.0",
  "description": "TARA Fusion - AI-Powered Threat Analysis & Risk Assessment Desktop App",
  "main": "main.js",
  "author": "TARA Fusion Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build": "npm run build:web && npm run copy:web && electron-builder",
    "build:web": "cd ../src && npm run build",
    "copy:web": "node -e \"require('fs').cpSync('../src/dist', './dist-web', {recursive: true})\"",
    "build:mac": "npm run build:web && npm run copy:web && electron-builder --mac",
    "build:win": "npm run build:web && npm run copy:web && electron-builder --win",
    "build:linux": "npm run build:web && npm run copy:web && electron-builder --linux",
    "build:all": "npm run build:web && npm run copy:web && electron-builder -mwl",
    "pack": "npm run build:web && npm run copy:web && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.tarafusion.app",
    "productName": "TARA Fusion",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "dist-web/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64", "universal"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64", "universal"]
        }
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^39.1.2",
    "electron-builder": "^26.0.12"
  }
}
